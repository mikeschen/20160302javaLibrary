<h3>Add an Patron</h3>
<hr>
<!-- FORM TO ADD PATRON -->
<form action="/patron/new" method="post" class="form-inline">
	<div class="form-group">
		<input id="PatronFirstName" name="PatronFirstName" type="text" class="form-control" placeholder="First Name">
		<input id="PatronLastName" name="PatronLastName" type="text" class="form-control" placeholder="Last Name">
		<button type="submit" class="btn btn-success">Add Patron</button>
	</div>
</form>

<h3>Add an Author</h3>
<hr>
<!-- FORM TO ADD AUTHOR -->
<form action="/author/new" method="post" class="form-inline">
	<div class="form-group">
		<input id="authorName" name="authorName" type="text" class="form-control" placeholder="Author Full Name">
		<button type="submit" class="btn btn-success">Add Author</button>
	</div>
</form>

<h3>Add a Book</h3>
<hr>
<!-- FORM TO ADD BOOK -->
<form action="/book/new" method="post" class="form-inline">
	<div class="form-group">
		<input id="bookTitle" name="bookTitle" type="text" class="form-control" placeholder="Title">
		<button type="submit" class="btn btn-success">Add Book</button>
	</div>
</form>
<br>
<br>
